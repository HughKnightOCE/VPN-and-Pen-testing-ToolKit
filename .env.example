# Environment Configuration Template
# Copy this to .env and customize for your deployment

# Flask Configuration
FLASK_ENV=production
FLASK_APP=server.py
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite:////app/data/vpn_toolkit.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@postgres:5432/vpn_toolkit

# VPN Proxy Configuration
PROXY_HOST=0.0.0.0
PROXY_PORT=9050
PROXY_ENCRYPTION_PASSWORD=your-secure-password-here
PROXY_MAX_CONNECTIONS=100
PROXY_TIMEOUT=30

# DNS Configuration
PRIMARY_DNS=1.1.1.1
SECONDARY_DNS=8.8.8.8
DNS_TIMEOUT=5

# Threat Detection Configuration
THREAT_DETECTION_ENABLED=true
AUTO_BLOCK_MALICIOUS_IPS=false
PORT_SCAN_THRESHOLD=15
BRUTE_FORCE_THRESHOLD=5
DDoS_SPIKE_MULTIPLIER=5
THREAT_LOG_RETENTION_DAYS=30

# Security
SECRET_KEY=change-this-to-a-random-secret-key
JWT_SECRET=change-this-to-a-random-jwt-secret
API_KEY_REQUIRED=false

# Logging
LOG_FILE=/app/data/vpn_toolkit.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Frontend Configuration
VITE_API_URL=http://localhost:5000
VITE_ENV=production

# Docker Specific
COMPOSE_PROJECT_NAME=vpn-toolkit
